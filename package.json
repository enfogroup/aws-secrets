{
  "name": "@enfo/aws-secrets",
  "version": "0.0.1",
  "description": "Wrapper around AWS SSM",
  "main": ".dist/index.js",
  "scripts": {
    "build": "npx esbuild src/*.ts --outdir=.dist --format=cjs --minify && tsc --emitDeclarationOnly --outDir .dist",
