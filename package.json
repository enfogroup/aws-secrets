    "lint": "npx eslint 'src/**/*.ts'",
    "lint:fix": "npx eslint -fix 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enfogroup/aws-secrets.git"
  },
  "keywords": [
